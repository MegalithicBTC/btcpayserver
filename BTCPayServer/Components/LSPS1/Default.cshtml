@model BTCPayServer.Components.LSPS1.LSPS1ViewModel
@using Newtonsoft.Json.Linq
@using BTCPayServer.Lightning

<div class="mt-4 mb-4 p-3 bg-light rounded" id="lsps1-component">
    <h3 class="mb-3">Lightning Node Liquidity Information</h3>
    
    @if (Model.HasLiquidityReport && Model.LiquidityReport != null)
    {
        var report = JObject.FromObject(Model.LiquidityReport);
        var status = report["Liquidity_Status"].ToString();
        var activeInbound = report["Active_Inbound_Satoshis"];
        var pendingInbound = report["Pending_Inbound_Satoshis"];
        
        <div class="card">
            <div class="card-header">
                <h4>Node Liquidity Status: 
                    @{
                        string statusClass = status switch
                        {
                            "Good" => "text-success",
                            "Pending" => "text-warning",
                            "Bad" => "text-danger",
                            _ => "text-secondary"
                        };
                    }
                    <span class="@statusClass">@status</span>
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5>Active Inbound Capacity</h5>
                            <p class="lead">@activeInbound sats</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5>Pending Inbound Capacity</h5>
                            <p class="lead">@pendingInbound sats</p>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <small class="text-muted">
                        Threshold for good liquidity: 250,000 sats
                    </small>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>@Model.Message</p>
        </div>
    }
    
    <div class="d-flex align-items-center mt-3">
        <span class="badge bg-primary me-2">Beta</span>
        <span>LSPS1 Liquidity Component</span>
    </div>
</div>